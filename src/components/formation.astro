---
import Layout from "../layouts/Layout.astro"

const formaciones = [
  {
    nombre: "Liceo Tecnico Profesional Cardenal Sancha Fe y Alegria",
    fecha: "2018 - 2021",
    descripcion: "Bachillerato en Ciencias y Tecnologias con especialidad en Informática."
  },
  {
    nombre: "Estudiante de Desarrollo de Software",
    fecha: "2022 - Presente",
    descripcion: "Estudiante de la carrera de Desarrollo de Software en el Instituto Tecnico Superior Comunitario (ITSC)"
  },
  {
    nombre: "Desarrollador Web Frontend con Angular",
    fecha: "2025",
    descripcion: "Curso de desarrollo web frontend con Angular, impartido por el Instituto Tecnologico de Las Americas (ITLA)"
  }
]
---

<Layout>
  <div class="flex flex-col items-center">
    <h1 class="text-2xl sm:text-3xl font-bold text-[#E0E0E0] mb-6 sm:mb-8 mt-4">Formación</h1>
    <div class="relative max-w-2xl w-full">
      <ol class="relative border-s-2 sm:border-s-4 border-gray-200 dark:border-gray-700 w-full">
        {formaciones.map((f, i) => (
          <li class="mb-6 sm:mb-10 ps-4 sm:ps-6 md:ps-8 relative">
            <div class="absolute w-2 h-2 sm:w-3 sm:h-3 bg-gray-200 rounded-full top-1 sm:top-2 -start-1 sm:-start-2 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
            <time class="mb-1 text-xs sm:text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{f.fecha}</time>
            <h3 class="text-base sm:text-lg font-semibold text-gray-900 dark:text-white">{f.nombre}</h3>
            <p class="text-sm sm:text-base font-normal text-gray-500 dark:text-gray-400">{f.descripcion}</p>
          </li>
        ))}
      </ol>
    </div>
  </div>
</Layout>
